{
  "name": "@editorjs-mentions/plugin",
  "version": "0.1.2",
  "description": "Mentions autocomplete plugin for Editor.js",
  "license": "MIT",
  "author": "editorjs-mentions contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/pmalirz/editorjs-mentions",
    "directory": "packages/editorjs-mentions"
  },
  "bugs": {
    "url": "https://github.com/pmalirz/editorjs-mentions/issues"
  },
  "homepage": "https://github.com/pmalirz/editorjs-mentions#readme",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "docs/mentions-example-autocomplete.png"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run typecheck && npm run build"
  },
  "keywords": [
    "editorjs",
    "mentions",
    "autocomplete",
    "plugin",
    "editor.js"
  ],
  "peerDependencies": {
    "@editorjs/editorjs": "^2.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.2",
    "typescript": "^5.4.0"
  }
}
