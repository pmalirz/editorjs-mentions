{
  "name": "editorjs-mentions-monorepo",
  "private": true,
  "version": "0.1.2",
  "description": "Editor.js mentions plugin + sample REST server",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "lint": "eslint \"packages/editorjs-mentions/src/**/*.{ts,js}\"",
    "format": "prettier --write \"packages/editorjs-mentions/src/**/*.{ts,js,json}\"",
    "test": "jest",
    "dev:server": "npm run dev --workspace @editorjs-mentions/example-server",
    "dev:plugin": "npm run dev --workspace @editorjs-mentions/plugin",
    "dev:demo": "npm run dev --workspace @editorjs-mentions/example-demo",
    "dev:ldap:up": "docker compose -f examples/server/docker-compose.ldap.yml up -d",
    "dev:ldap:down": "docker compose -f examples/server/docker-compose.ldap.yml down",
    "version:plugin:patch": "npm version patch --workspace @editorjs-mentions/plugin --no-git-tag-version",
    "version:plugin:minor": "npm version minor --workspace @editorjs-mentions/plugin --no-git-tag-version",
    "version:plugin:major": "npm version major --workspace @editorjs-mentions/plugin --no-git-tag-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmalirz/editorjs-mentions.git"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6"
  }
}
